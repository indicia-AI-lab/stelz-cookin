{% comment %}
  STËLZ Password Page - Premium Preview Experience
  Met kenmerkende STËLZ branding en animaties
{% endcomment %}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" media="print" onload="this.media='all'">
<noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap"></noscript>

<style>
  :root {
    --pw-bg: #0a0a0a;
    --pw-text: #ffffff;
    --pw-accent: #4ade80;
    --pw-accent-dark: #22c55e;
    --pw-accent-glow: rgba(74, 222, 128, 0.3);
    --pw-muted: rgba(255, 255, 255, 0.5);
    --mouse-x: 0px;
    --mouse-y: 0px;
  }

  .password-page {
    position: relative;
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: var(--pw-bg);
    color: var(--pw-text);
    overflow: hidden;
    font-family: 'Space Grotesk', system-ui, sans-serif;
  }

  /* Giant Background Brand Text */
  .password-brand-bg {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    overflow: hidden;
  }

  .password-brand-bg__text {
    font-family: 'Space Grotesk', sans-serif;
    font-size: clamp(15rem, 35vw, 45rem);
    font-weight: 700;
    color: var(--pw-text);
    opacity: 0.02;
    line-height: 1;
    letter-spacing: 0.08em;
    user-select: none;
    white-space: nowrap;
  }

  /* Animated Orbs */
  .password-orbs {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
  }

  .password-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
    pointer-events: none;
  }

  .password-orb--1 {
    width: 50vw;
    height: 50vw;
    max-width: 600px;
    max-height: 600px;
    background: var(--pw-accent);
    top: -15%;
    left: -10%;
    opacity: 0.15;
    animation: orb-float-1 20s ease-in-out infinite;
    transform: translate(var(--mouse-x), var(--mouse-y));
  }

  .password-orb--2 {
    width: 40vw;
    height: 40vw;
    max-width: 500px;
    max-height: 500px;
    background: var(--pw-accent-dark);
    bottom: -10%;
    right: -5%;
    opacity: 0.12;
    animation: orb-float-2 25s ease-in-out infinite;
    transform: translate(calc(var(--mouse-x) * -0.5), calc(var(--mouse-y) * -0.5));
  }

  .password-orb--3 {
    width: 30vw;
    height: 30vw;
    max-width: 350px;
    max-height: 350px;
    background: linear-gradient(135deg, var(--pw-accent), var(--pw-accent-dark));
    top: 60%;
    left: 30%;
    opacity: 0.08;
    animation: orb-float-3 18s ease-in-out infinite;
  }

  @keyframes orb-float-1 {
    0%, 100% { transform: translate(var(--mouse-x, 0), var(--mouse-y, 0)) scale(1); }
    33% { transform: translate(calc(var(--mouse-x, 0) + 3%), calc(var(--mouse-y, 0) + 5%)) scale(1.05); }
    66% { transform: translate(calc(var(--mouse-x, 0) - 2%), calc(var(--mouse-y, 0) + 3%)) scale(0.98); }
  }

  @keyframes orb-float-2 {
    0%, 100% { transform: translate(calc(var(--mouse-x, 0) * -0.5), calc(var(--mouse-y, 0) * -0.5)) scale(1); }
    50% { transform: translate(calc(var(--mouse-x, 0) * -0.5 + 5%), calc(var(--mouse-y, 0) * -0.5 - 3%)) scale(1.08); }
  }

  @keyframes orb-float-3 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(5%, -3%) rotate(180deg); }
  }

  /* Noise texture */
  .password-noise {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.04;
    pointer-events: none;
    mix-blend-mode: overlay;
  }

  /* Floating bubbles */
  .password-bubbles {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
    overflow: hidden;
  }

  .password-bubble {
    position: absolute;
    background: var(--pw-accent);
    border-radius: 50%;
    left: var(--x);
    bottom: -20px;
    animation: bubble-rise 12s ease-in infinite;
    animation-delay: var(--delay);
  }

  @keyframes bubble-rise {
    0% { 
      transform: translateY(0) translateX(0) scale(1); 
      opacity: 0; 
    }
    5% { opacity: 0.6; }
    50% { 
      transform: translateY(-50vh) translateX(20px) scale(0.8); 
    }
    95% { opacity: 0.3; }
    100% { 
      transform: translateY(-110vh) translateX(-15px) scale(0.5); 
      opacity: 0; 
    }
  }

  /* Content */
  .password-content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 2rem;
    max-width: 900px;
    width: 100%;
  }

  /* STËLZ Headline */
  .password-headline {
    font-size: clamp(4rem, 15vw, 12rem);
    font-weight: 700;
    line-height: 0.9;
    letter-spacing: 0.05em;
    margin: 0 0 1.5rem;
    cursor: default;
    animation: fadeInUp 1s ease-out 0.2s both;
  }

  .password-headline__text {
    display: inline-block;
    background: linear-gradient(
      135deg, 
      var(--pw-text) 0%, 
      var(--pw-accent) 40%, 
      var(--pw-text) 60%,
      var(--pw-accent) 100%
    );
    background-size: 300% 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: shimmer 6s ease infinite;
    text-shadow: 0 0 80px var(--pw-accent-glow);
  }

  @keyframes shimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* Premium tagline */
  .password-tagline {
    font-size: clamp(0.75rem, 2vw, 1rem);
    font-weight: 500;
    letter-spacing: 0.4em;
    text-transform: uppercase;
    color: var(--pw-accent);
    margin-bottom: 1.5rem;
    animation: fadeInUp 1s ease-out 0.3s both;
  }

  /* Subheadline */
  .password-subheadline {
    font-size: clamp(1.1rem, 3vw, 1.5rem);
    color: var(--pw-muted);
    margin: 0 0 0.75rem;
    line-height: 1.5;
    font-weight: 400;
    animation: fadeInUp 1s ease-out 0.4s both;
  }

  .password-subheadline .accent {
    color: var(--pw-accent);
    font-weight: 600;
  }

  .password-description {
    font-size: clamp(0.875rem, 2vw, 1rem);
    color: rgba(255, 255, 255, 0.35);
    margin: 0 auto 3rem;
    max-width: 26rem;
    line-height: 1.6;
    animation: fadeInUp 1s ease-out 0.5s both;
  }

  /* Form */
  .password-form {
    max-width: 440px;
    margin: 0 auto;
    animation: fadeInUp 1s ease-out 0.6s both;
  }

  .password-form__inner {
    display: flex;
    gap: 0;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 100px;
    padding: 0.5rem;
    backdrop-filter: blur(20px);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .password-form__inner:focus-within {
    border-color: var(--pw-accent);
    box-shadow: 
      0 0 0 1px var(--pw-accent),
      0 0 40px var(--pw-accent-glow),
      inset 0 0 20px rgba(74, 222, 128, 0.05);
  }

  .password-form__inner.error {
    border-color: #ef4444;
    animation: shake 0.5s ease;
  }

  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    20% { transform: translateX(-10px); }
    40% { transform: translateX(10px); }
    60% { transform: translateX(-6px); }
    80% { transform: translateX(6px); }
  }

  .password-form__input {
    flex: 1;
    background: transparent;
    border: none;
    padding: 1.125rem 1.75rem;
    font-size: 1rem;
    font-family: 'Space Grotesk', sans-serif;
    color: var(--pw-text);
    outline: none;
    letter-spacing: 0.02em;
  }

  .password-form__input::placeholder {
    color: rgba(255, 255, 255, 0.3);
  }

  .password-form__button {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    background: var(--pw-accent);
    color: var(--pw-bg);
    border: none;
    padding: 1.125rem 2rem;
    font-size: 0.9rem;
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    border-radius: 100px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    position: relative;
    overflow: hidden;
  }

  .password-form__button::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transform: translateX(-100%);
    transition: transform 0.5s ease;
  }

  .password-form__button:hover {
    transform: scale(1.03);
    box-shadow: 
      0 0 30px var(--pw-accent-glow),
      0 8px 25px rgba(0, 0, 0, 0.3);
  }

  .password-form__button:hover::before {
    transform: translateX(100%);
  }

  .password-form__button svg {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  .password-form__button:hover svg {
    transform: translateX(4px);
  }

  .password-form__error {
    color: #ef4444;
    font-size: 0.875rem;
    margin-top: 1rem;
    animation: fadeInUp 0.3s ease;
  }

  /* Age Badge */
  .password-age {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: var(--pw-muted);
    opacity: 0.4;
    animation: fadeIn 1s ease-out 1s both;
  }

  /* Footer Links */
  .password-footer {
    position: absolute;
    bottom: 2rem;
    left: 2rem;
    display: flex;
    gap: 1.5rem;
    animation: fadeIn 1s ease-out 1s both;
  }

  .password-footer__link {
    color: var(--pw-muted);
    text-decoration: none;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    opacity: 0.4;
    transition: all 0.3s ease;
  }

  .password-footer__link:hover {
    color: var(--pw-accent);
    opacity: 1;
  }

  /* Animations */
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* Responsive */
  @media (max-width: 640px) {
    .password-form__inner {
      flex-direction: column;
      border-radius: 1.25rem;
      padding: 0.75rem;
    }
    
    .password-form__input {
      text-align: center;
    }
    
    .password-form__button {
      width: 100%;
      justify-content: center;
    }
    
    .password-age,
    .password-footer {
      position: static;
      margin-top: 3rem;
    }
    
    .password-content {
      padding-bottom: 4rem;
    }
    
    .password-footer {
      justify-content: center;
    }
  }
</style>

<div class="password-page" data-password-page>
  <!-- Giant background brand text -->
  <div class="password-brand-bg">
    <span class="password-brand-bg__text">STËLZ</span>
  </div>

  <!-- Animated orbs -->
  <div class="password-orbs">
    <div class="password-orb password-orb--1"></div>
    <div class="password-orb password-orb--2"></div>
    <div class="password-orb password-orb--3"></div>
  </div>

  <!-- Noise texture -->
  <div class="password-noise"></div>

  <!-- Floating bubbles -->
  <div class="password-bubbles">
    {% for i in (1..15) %}
      {% assign random_x = i | times: 7 | modulo: 100 %}
      {% assign random_delay = i | times: 0.8 %}
      {% assign random_size = i | modulo: 4 | plus: 2 %}
      <div class="password-bubble" style="--x: {{ random_x }}%; --delay: {{ random_delay }}s; width: {{ random_size }}px; height: {{ random_size }}px;"></div>
    {% endfor %}
  </div>

  <!-- Main content -->
  <div class="password-content">
    <!-- STËLZ Headline -->
    <h1 class="password-headline">
      <span class="password-headline__text">STËLZ</span>
    </h1>

    <p class="password-tagline">{{ section.settings.tagline }}</p>

    <p class="password-subheadline">
      {{ section.settings.subheadline_start }} <span class="accent">{{ section.settings.subheadline_accent }}</span>
    </p>

    <p class="password-description">{{ section.settings.description }}</p>

    {% form 'storefront_password', class: 'password-form' %}
      <div class="password-form__inner" data-form-inner>
        <input 
          type="password" 
          name="password" 
          class="password-form__input" 
          placeholder="{{ section.settings.placeholder }}"
          required
          autocomplete="off"
        >
        <button type="submit" class="password-form__button">
          <span>{{ section.settings.button_text }}</span>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </button>
      </div>
      {% if form.errors %}
        <p class="password-form__error">{{ section.settings.error_message }}</p>
      {% endif %}
    {% endform %}
  </div>

  <!-- Age badge -->
  <div class="password-age">18+</div>

  <!-- Footer -->
  <div class="password-footer">
    <a href="#" class="password-footer__link">Instagram</a>
    <a href="#" class="password-footer__link">TikTok</a>
  </div>
</div>

<script>
  (function() {
    const page = document.querySelector('[data-password-page]');
    if (!page) return;

    let mouseX = 0, mouseY = 0;
    let currentX = 0, currentY = 0;
    
    document.addEventListener('mousemove', (e) => {
      mouseX = (e.clientX / window.innerWidth - 0.5) * 40;
      mouseY = (e.clientY / window.innerHeight - 0.5) * 40;
    });

    function animate() {
      currentX += (mouseX - currentX) * 0.08;
      currentY += (mouseY - currentY) * 0.08;
      
      page.style.setProperty('--mouse-x', currentX + 'px');
      page.style.setProperty('--mouse-y', currentY + 'px');
      
      requestAnimationFrame(animate);
    }
    animate();

    const form = page.querySelector('.password-form__inner');
    const input = page.querySelector('.password-form__input');
    
    if (form && input) {
      input.addEventListener('focus', () => {
        form.classList.remove('error');
      });
    }
  })();
</script>

