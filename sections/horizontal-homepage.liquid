<script>
(function() {
  'use strict';
  
  const homepage = document.querySelector('.hz-homepage');
  const container = document.getElementById('hzContainer');
  const loadingScreen = document.getElementById('loadingScreen');
  const cursorDot = document.getElementById('cursorDot');
  const cursorRing = document.getElementById('cursorRing');
  const bgGradient = document.getElementById('bgGradient');
  const progressBar = document.getElementById('progressBar');
  const progressIndicator = document.getElementById('progressIndicator');
  const sectionNav = document.getElementById('sectionNav');
  const productNav = document.getElementById('productNav');
  const heroProductImage = document.getElementById('heroProductImage');
  const heroGlow = document.getElementById('heroGlow');
  const heroGlowInner = document.getElementById('heroGlowInner');
  const heroBadgeName = document.getElementById('heroBadgeName');
  const heroBadgeTagline = document.getElementById('heroBadgeTagline');
  
  let activeProductIndex = 0;
  let mouseX = 0.5;
  let mouseY = 0.5;
  let autoRotateInterval;
  
  const products = Array.from(productNav.querySelectorAll('.hz-product-nav__item')).map(btn => ({
    color: btn.dataset.color,
    name: btn.dataset.name,
    tagline: btn.dataset.tagline,
    image: btn.dataset.image
  }));

  // Loading screen
  setTimeout(() => {
    loadingScreen.classList.add('hidden');
    setTimeout(() => loadingScreen.remove(), 1000);
  }, 800);

  // Custom cursor
  document.addEventListener('mousemove', (e) => {
    cursorDot.style.left = e.clientX + 'px';
    cursorDot.style.top = e.clientY + 'px';
    cursorRing.style.left = e.clientX + 'px';
    cursorRing.style.top = e.clientY + 'px';
    
    mouseX = e.clientX / window.innerWidth;
    mouseY = e.clientY / window.innerHeight;
    
    updateBackground();
  });

  // Hover states for cursor
  document.querySelectorAll('a, button').forEach(el => {
    el.addEventListener('mouseenter', () => cursorRing.classList.add('hover'));
    el.addEventListener('mouseleave', () => cursorRing.classList.remove('hover'));
  });

  // Background gradient
  function updateBackground() {
    const color = products[activeProductIndex]?.color || '#FFB347';
    bgGradient.style.background = `
      radial-gradient(ellipse 80% 50% at ${mouseX * 100}% ${mouseY * 100}%, ${color}12 0%, transparent 50%),
      radial-gradient(ellipse 60% 40% at 20% 80%, ${color}08 0%, transparent 50%),
      radial-gradient(ellipse 50% 30% at 80% 20%, ${color}06 0%, transparent 50%),
      #050505
    `;
  }

  // Scroll progress
  container.addEventListener('scroll', () => {
    const scrollLeft = container.scrollLeft;
    const maxScroll = container.scrollWidth - container.clientWidth;
    const progress = scrollLeft / maxScroll;
    
    progressBar.style.width = (progress * 100) + '%';
    progressIndicator.style.left = (progress * 100) + '%';
    
    // Update active section
    const sectionWidth = window.innerWidth;
    const currentSection = Math.round(scrollLeft / sectionWidth);
    
    sectionNav.querySelectorAll('.hz-section-nav__item').forEach((btn, i) => {
      btn.classList.toggle('active', i === currentSection);
    });
  }, { passive: true });

  // Section navigation
  sectionNav.querySelectorAll('.hz-section-nav__item').forEach((btn, i) => {
    btn.addEventListener('click', () => {
      container.scrollTo({
        left: window.innerWidth * i,
        behavior: 'smooth'
      });
    });
  });

  // Product navigation
  function setActiveProduct(index) {
    activeProductIndex = index;
    const product = products[index];
    
    productNav.querySelectorAll('.hz-product-nav__item').forEach((btn, i) => {
      const dot = btn.querySelector('.hz-product-nav__dot');
      btn.classList.toggle('active', i === index);
      if (i === index) {
        dot.style.boxShadow = `0 0 15px ${product.color}, 0 0 30px ${product.color}50`;
      } else {
        dot.style.boxShadow = 'none';
      }
    });
    
    // Update hero
    heroProductImage.src = product.image;
    heroProductImage.style.filter = `drop-shadow(0 60px 100px ${product.color}40) drop-shadow(0 20px 40px rgba(0,0,0,0.5))`;
    heroGlow.style.backgroundColor = product.color;
    heroGlowInner.style.backgroundColor = product.color;
    heroBadgeName.textContent = product.name.toUpperCase();
    heroBadgeTagline.textContent = product.tagline;
    
    updateBackground();
  }

  productNav.querySelectorAll('.hz-product-nav__item').forEach((btn, i) => {
    btn.addEventListener('click', () => {
      setActiveProduct(i);
      resetAutoRotate();
    });
    btn.addEventListener('mouseenter', () => setActiveProduct(i));
  });

  // Auto-rotate products
  function startAutoRotate() {
    autoRotateInterval = setInterval(() => {
      setActiveProduct((activeProductIndex + 1) % products.length);
    }, 3500);
  }

  function resetAutoRotate() {
    clearInterval(autoRotateInterval);
    startAutoRotate();
  }

  startAutoRotate();

  // Feature cards visibility
  const featureCards = document.querySelectorAll('.hz-feature-card');
  const featureObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, { threshold: 0.3 });

  featureCards.forEach(card => featureObserver.observe(card));

})();
</script>

