{% comment %}
  Reviews Showcase Section - Premium Testimonials Display
  Features: Animated cards, star ratings, avatars, verified badges, polaroid gallery
  Fully customizable via Shopify Theme Editor
{% endcomment %}

{% style %}
/* ==========================================================================
   REVIEWS SHOWCASE - FULL CSS
   All variables are configurable via Theme Editor
   ========================================================================== */

/* CSS Variables */
#reviews-showcase-{{ section.id }} {
  /* Background - inherits from global theme in dark mode */
  --rv-bg: {{ section.settings.background_color }};
  --rv-bg-gradient-from: {{ section.settings.bg_gradient_from }};
  --rv-bg-gradient-via: {{ section.settings.bg_gradient_via }};
  --rv-bg-gradient-to: {{ section.settings.bg_gradient_to }};
  
  /* Text Colors - inherits from global theme in dark mode */
  --rv-text: {{ section.settings.text_color }};
  --rv-muted: {{ section.settings.muted_color }};
  --rv-primary: {{ section.settings.primary_color }};
  --rv-accent: {{ section.settings.accent_color }};
  
  /* Star Rating */
  --rv-star: {{ section.settings.star_color }};
  --rv-star-empty: {{ section.settings.star_empty_color }};
  --rv-star-size: {{ section.settings.star_size }}rem;
  --rv-star-gap: {{ section.settings.star_gap }}rem;
  
  /* Card Styling */
  --rv-card-bg: {{ section.settings.card_background }};
  --rv-card-border: {{ section.settings.card_border_color }};
  --rv-card-radius: {{ section.settings.card_border_radius }}px;
  --rv-card-padding: {{ section.settings.card_padding }}rem;
  --rv-card-shadow: {{ section.settings.card_shadow }};
  --rv-card-gap: {{ section.settings.grid_gap }}rem;
  --rv-card-gap-mobile: {{ section.settings.grid_gap_mobile }}rem;
  --rv-card-width: {{ section.settings.card_width }}px;
  --rv-card-width-md: {{ section.settings.card_width_md }}px;
  
  /* Quote Styling */
  --rv-quote-size: {{ section.settings.quote_font_size }}rem;
  --rv-quote-size-mobile: {{ section.settings.quote_font_size_mobile }}rem;
  --rv-quote-icon-size: {{ section.settings.quote_icon_size }}rem;
  --rv-quote-icon-color: {{ section.settings.quote_icon_color }};
  
  /* Avatar */
  --rv-avatar-size: {{ section.settings.avatar_size }}px;
  
  /* Navigation */
  --rv-nav-size: {{ section.settings.nav_button_size }}px;
  --rv-nav-bg: {{ section.settings.nav_background }};
  --rv-nav-border: {{ section.settings.nav_border_color }};
  --rv-nav-icon-size: {{ section.settings.nav_icon_size }}px;
  
  /* Spacing */
  --rv-padding-top: {{ section.settings.padding_top }}px;
  --rv-padding-bottom: {{ section.settings.padding_bottom }}px;
  --rv-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
  --rv-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
  
  /* Typography */
  --rv-title-size: {{ section.settings.title_font_size }}rem;
  --rv-title-size-mobile: {{ section.settings.title_font_size_mobile }}rem;
  --rv-subtitle-size: {{ section.settings.subtitle_font_size }}rem;
  --rv-badge-tracking: {{ section.settings.badge_letter_spacing }}em;
  
  /* Stats */
  --rv-stats-size: {{ section.settings.stats_font_size }}rem;
  --rv-stats-gap: {{ section.settings.stats_gap }}rem;
  
  /* Glow Effects */
  --rv-glow-primary-size: {{ section.settings.glow_primary_size }}px;
  --rv-glow-primary-opacity: {{ section.settings.glow_primary_opacity | divided_by: 100.0 }};
  --rv-glow-accent-size: {{ section.settings.glow_accent_size }}px;
  --rv-glow-accent-opacity: {{ section.settings.glow_accent_opacity | divided_by: 100.0 }};
  --rv-glow-blur: {{ section.settings.glow_blur }}px;
  
  /* Polaroid Styling */
  --polaroid-bg: {{ section.settings.polaroid_background }};
  --polaroid-padding: {{ section.settings.polaroid_padding }}rem;
  --polaroid-padding-bottom: {{ section.settings.polaroid_padding_bottom }}rem;
  --polaroid-width: {{ section.settings.polaroid_width }}rem;
  --polaroid-height: {{ section.settings.polaroid_height }}rem;
  --polaroid-radius: {{ section.settings.polaroid_radius }}px;
  --polaroid-shadow: {{ section.settings.polaroid_shadow }};
  --polaroid-shadow-hover: {{ section.settings.polaroid_shadow_hover }};
  --polaroid-hover-scale: {{ section.settings.polaroid_hover_scale }};
  --polaroid-hover-lift: {{ section.settings.polaroid_hover_lift }}px;
  --polaroid-tape-width: {{ section.settings.polaroid_tape_width }}rem;
  --polaroid-tape-height: {{ section.settings.polaroid_tape_height }}rem;
  --polaroid-tape-opacity: {{ section.settings.polaroid_tape_opacity | divided_by: 100.0 }};
  --polaroid-caption-size: {{ section.settings.polaroid_caption_size }}rem;
  
  /* CTA */
  --rv-cta-title-size: {{ section.settings.cta_title_size }}rem;
  --rv-cta-button-px: {{ section.settings.cta_button_px }}rem;
  --rv-cta-button-py: {{ section.settings.cta_button_py }}rem;
  --rv-cta-button-radius: {{ section.settings.cta_button_radius }}px;
  
  /* Animations */
  --rv-animation-duration: {{ section.settings.animation_duration }}s;
  --rv-floating-star-opacity: {{ section.settings.floating_star_opacity | divided_by: 100.0 }};
  
  /* Avatar Colors - ST√ãLZ Brand */
  --avatar-color-1: {{ section.settings.avatar_color_1 }};
  --avatar-color-2: {{ section.settings.avatar_color_2 }};
  --avatar-color-3: {{ section.settings.avatar_color_3 }};
  --avatar-color-4: {{ section.settings.avatar_color_4 }};
  --avatar-color-5: {{ section.settings.avatar_color_5 }};
  --avatar-color-6: {{ section.settings.avatar_color_6 }};
  --avatar-color-7: {{ section.settings.avatar_color_7 }};
  --avatar-color-8: {{ section.settings.avatar_color_8 }};
}

/* Base Section - Deferred rendering for below-fold content */
.reviews-showcase {
  position: relative;
  padding: var(--rv-padding-top-mobile) 0 var(--rv-padding-bottom-mobile);
  overflow: hidden;
  {% if section.settings.use_gradient_bg %}
  background: linear-gradient(to bottom, var(--rv-bg-gradient-from), var(--rv-bg-gradient-via), var(--rv-bg-gradient-to));
  {% else %}
  background: var(--rv-bg);
  {% endif %}
  content-visibility: auto;
  contain-intrinsic-size: auto 800px;
}

@media (min-width: 768px) {
  .reviews-showcase {
    padding: var(--rv-padding-top) 0 var(--rv-padding-bottom);
  }
}

/* Animated Background Glow */
.reviews-showcase__bg-glow {
  position: absolute;
  inset: 0;
  pointer-events: none;
  {% unless section.settings.show_glow_effects %}display: none;{% endunless %}
}

.reviews-showcase__bg-glow::before {
  content: '';
  position: absolute;
  top: 25%;
  left: 25%;
  width: var(--rv-glow-primary-size);
  height: var(--rv-glow-primary-size);
  background: radial-gradient(circle, var(--rv-primary) 0%, transparent 70%);
  opacity: var(--rv-glow-primary-opacity);
  filter: blur(var(--rv-glow-blur));
  border-radius: 50%;
  animation: glowFloat 20s ease-in-out infinite;
}

.reviews-showcase__bg-glow::after {
  content: '';
  position: absolute;
  bottom: 25%;
  right: 25%;
  width: var(--rv-glow-accent-size);
  height: var(--rv-glow-accent-size);
  background: radial-gradient(circle, var(--rv-accent) 0%, transparent 70%);
  opacity: var(--rv-glow-accent-opacity);
  filter: blur(var(--rv-glow-blur));
  border-radius: 50%;
  animation: glowFloat2 15s ease-in-out infinite;
}

@keyframes glowFloat {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(30px, -20px) scale(1.1); }
  66% { transform: translate(-10px, 10px) scale(0.95); }
}

@keyframes glowFloat2 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(-20px, 30px) scale(0.95); }
  66% { transform: translate(15px, -15px) scale(1.05); }
}

/* Floating Stars Background */
.reviews-showcase__floating-stars {
  position: absolute;
  inset: 0;
  pointer-events: none;
  overflow: hidden;
  {% unless section.settings.show_floating_stars %}display: none;{% endunless %}
}

.reviews-showcase__floating-star {
  position: absolute;
  color: var(--rv-primary);
  opacity: var(--rv-floating-star-opacity);
  animation: floatStar 20s linear infinite;
}

.reviews-showcase__floating-star:nth-child(1) { left: 10%; top: 20%; font-size: 1.5rem; animation-delay: 0s; animation-duration: 17s; }
.reviews-showcase__floating-star:nth-child(2) { left: 25%; top: 60%; font-size: 1rem; animation-delay: -5s; animation-duration: 19s; }
.reviews-showcase__floating-star:nth-child(3) { left: 50%; top: 10%; font-size: 2rem; animation-delay: -10s; animation-duration: 21s; }
.reviews-showcase__floating-star:nth-child(4) { left: 70%; top: 40%; font-size: 1.25rem; animation-delay: -3s; animation-duration: 18s; }
.reviews-showcase__floating-star:nth-child(5) { left: 85%; top: 75%; font-size: 1.75rem; animation-delay: -8s; animation-duration: 20s; }
.reviews-showcase__floating-star:nth-child(6) { left: 40%; top: 85%; font-size: 1rem; animation-delay: -15s; animation-duration: 16s; }

@keyframes floatStar {
  0% { transform: translateY(0) rotate(0deg); opacity: 0; }
  10% { opacity: var(--rv-floating-star-opacity); }
  90% { opacity: var(--rv-floating-star-opacity); }
  100% { transform: translateY(-100vh) rotate(360deg); opacity: 0; }
}

/* Container */
.reviews-showcase__container {
  position: relative;
  z-index: 10;
  width: 100%;
  max-width: {{ section.settings.container_max_width }}px;
  margin: 0 auto;
  padding: 0 1.5rem;
}

@media (min-width: 768px) {
  .reviews-showcase__container {
    padding: 0 2rem;
  }
}

/* Header */
.reviews-showcase__header {
  text-align: {{ section.settings.header_alignment }};
  margin-bottom: {{ section.settings.header_margin_bottom }}rem;
  {% if section.settings.enable_animations %}
  opacity: 0;
  transform: translateY(40px);
  transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1), transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  {% endif %}
}

.reviews-showcase__header.is-visible {
  opacity: 1;
  transform: translateY(0);
}

.reviews-showcase__badge {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  font-family: {{ section.settings.display_font }};
  font-size: {{ section.settings.badge_font_size }}rem;
  letter-spacing: var(--rv-badge-tracking);
  color: var(--rv-primary);
  margin-bottom: 1rem;
  text-transform: uppercase;
}

.reviews-showcase__badge-icon {
  font-size: 1.25rem;
}

.reviews-showcase__title {
  font-family: {{ section.settings.display_font }};
  font-size: var(--rv-title-size-mobile);
  line-height: {{ section.settings.title_line_height }};
  color: var(--rv-text);
  margin: 0 0 1.5rem;
}

@media (min-width: 768px) {
  .reviews-showcase__title {
    font-size: var(--rv-title-size);
  }
}

.reviews-showcase__subtitle {
  font-size: var(--rv-subtitle-size);
  color: var(--rv-muted);
  max-width: 600px;
  margin: 0 auto 2rem;
}

/* Stats Bar */
.reviews-showcase__stats {
  display: flex;
  flex-wrap: wrap;
  justify-content: {{ section.settings.header_alignment }};
  gap: var(--rv-stats-gap);
  {% unless section.settings.show_stats %}display: none;{% endunless %}
}

.reviews-showcase__stat {
  text-align: center;
}

.reviews-showcase__stat-value {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  font-family: {{ section.settings.display_font }};
  font-size: var(--rv-stats-size);
  color: var(--rv-text);
  line-height: 1;
}

.reviews-showcase__stat-star {
  color: var(--rv-star);
  font-size: 1.75rem;
}

.reviews-showcase__stat-label {
  font-size: 0.875rem;
  color: var(--rv-muted);
  margin-top: 0.25rem;
}

/* Carousel Container */
.reviews-showcase__carousel-wrapper {
  position: relative;
  margin-top: 2rem;
}

/* Navigation Buttons */
.reviews-showcase__nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 20;
  width: var(--rv-nav-size);
  height: var(--rv-nav-size);
  background: var(--rv-nav-bg);
  backdrop-filter: blur(8px);
  border: 1px solid var(--rv-nav-border);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.reviews-showcase__nav:hover {
  transform: translateY(-50%) scale(1.1);
  border-color: var(--rv-primary);
}

.reviews-showcase__nav--prev {
  left: 1rem;
}

.reviews-showcase__nav--next {
  right: 1rem;
}

@media (min-width: 768px) {
  .reviews-showcase__nav--prev { left: 2rem; }
  .reviews-showcase__nav--next { right: 2rem; }
}

.reviews-showcase__nav-icon {
  width: var(--rv-nav-icon-size);
  height: var(--rv-nav-icon-size);
  color: var(--rv-text);
}

/* Carousel Track */
.reviews-showcase__carousel {
  display: flex;
  gap: var(--rv-card-gap-mobile);
  overflow-x: auto;
  scroll-behavior: smooth;
  scroll-snap-type: x mandatory;
  padding: 0 2rem 1.5rem;
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.reviews-showcase__carousel::-webkit-scrollbar {
  display: none;
}

@media (min-width: 768px) {
  .reviews-showcase__carousel {
    gap: var(--rv-card-gap);
    padding: 0 4rem 1.5rem;
  }
}

/* Review Card */
.review-card {
  flex-shrink: 0;
  scroll-snap-align: center;
  width: var(--rv-card-width);
  position: relative;
  background: var(--rv-card-bg);
  border-radius: var(--rv-card-radius);
  border: 1px solid var(--rv-card-border);
  padding: var(--rv-card-padding);
  box-shadow: var(--rv-card-shadow);
  {% if section.settings.enable_animations %}
  opacity: 0;
  transform: translateY(50px) scale(0.9);
  transition: opacity var(--rv-animation-duration) cubic-bezier(0.16, 1, 0.3, 1), 
              transform var(--rv-animation-duration) cubic-bezier(0.16, 1, 0.3, 1);
  {% endif %}
}

.review-card.is-visible {
  opacity: 1;
  transform: translateY(0) scale(1);
}

@media (min-width: 768px) {
  .review-card {
    width: var(--rv-card-width-md);
  }
}

/* Featured Card */
.review-card--featured {
  width: calc(var(--rv-card-width) * 1.1);
  background: linear-gradient(135deg, var(--rv-card-bg) 0%, rgba(197, 165, 114, 0.05) 100%);
  border-color: rgba(197, 165, 114, 0.2);
}

@media (min-width: 768px) {
  .review-card--featured {
    width: calc(var(--rv-card-width-md) * 1.2);
  }
}

/* Quote Icon */
.review-card__quote-icon {
  position: absolute;
  top: var(--rv-card-padding);
  right: var(--rv-card-padding);
  font-size: var(--rv-quote-icon-size);
  line-height: 1;
  color: var(--rv-quote-icon-color);
  font-family: Georgia, serif;
  {% unless section.settings.show_quote_icon %}display: none;{% endunless %}
}

/* Star Rating */
.review-card__rating {
  display: flex;
  gap: var(--rv-star-gap);
  margin-bottom: 1.25rem;
}

.review-card__star {
  font-size: var(--rv-star-size);
  color: var(--rv-star);
}

.review-card__star--empty {
  color: var(--rv-star-empty);
}

/* Quote/Content */
.review-card__content {
  margin-bottom: 1.5rem;
}

.review-card__quote {
  font-size: var(--rv-quote-size-mobile);
  line-height: {{ section.settings.quote_line_height }};
  color: var(--rv-text);
  margin: 0;
}

@media (min-width: 768px) {
  .review-card__quote {
    font-size: var(--rv-quote-size);
  }
}

.review-card--featured .review-card__quote {
  font-size: calc(var(--rv-quote-size-mobile) * 1.1);
}

@media (min-width: 768px) {
  .review-card--featured .review-card__quote {
    font-size: calc(var(--rv-quote-size) * 1.1);
  }
}

/* Author */
.review-card__author {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.review-card__avatar {
  position: relative;
  width: var(--rv-avatar-size);
  height: var(--rv-avatar-size);
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}

.review-card__avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.review-card__avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-family: {{ section.settings.display_font }};
  font-size: calc(var(--rv-avatar-size) * 0.4);
  font-weight: 600;
  text-shadow: 0 1px 2px rgba(0,0,0,0.1);
}

/* Avatar Colors */
.review-card:nth-child(8n+1) .review-card__avatar-placeholder { background: linear-gradient(135deg, var(--avatar-color-1), color-mix(in srgb, var(--avatar-color-1) 70%, white)); }
.review-card:nth-child(8n+2) .review-card__avatar-placeholder { background: linear-gradient(135deg, var(--avatar-color-2), color-mix(in srgb, var(--avatar-color-2) 70%, white)); }
.review-card:nth-child(8n+3) .review-card__avatar-placeholder { background: linear-gradient(135deg, var(--avatar-color-3), color-mix(in srgb, var(--avatar-color-3) 70%, white)); }
.review-card:nth-child(8n+4) .review-card__avatar-placeholder { background: linear-gradient(135deg, var(--avatar-color-4), color-mix(in srgb, var(--avatar-color-4) 70%, white)); }
.review-card:nth-child(8n+5) .review-card__avatar-placeholder { background: linear-gradient(135deg, var(--avatar-color-5), color-mix(in srgb, var(--avatar-color-5) 70%, white)); }
.review-card:nth-child(8n+6) .review-card__avatar-placeholder { background: linear-gradient(135deg, var(--avatar-color-6), color-mix(in srgb, var(--avatar-color-6) 70%, white)); }
.review-card:nth-child(8n+7) .review-card__avatar-placeholder { background: linear-gradient(135deg, var(--avatar-color-7), color-mix(in srgb, var(--avatar-color-7) 70%, white)); }
.review-card:nth-child(8n+8) .review-card__avatar-placeholder { background: linear-gradient(135deg, var(--avatar-color-8), color-mix(in srgb, var(--avatar-color-8) 70%, white)); }

.review-card__author-info {
  flex: 1;
  min-width: 0;
}

.review-card__name {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-family: {{ section.settings.display_font }};
  font-size: {{ section.settings.author_name_size }}rem;
  color: var(--rv-text);
  margin: 0;
}

.review-card__verified {
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
  font-size: 0.75rem;
  color: {{ section.settings.verified_color }};
  {% unless section.settings.show_verified %}display: none;{% endunless %}
}

.review-card__verified-icon {
  font-size: 0.875rem;
}

/* Helpful Counter */
.review-card__helpful {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-top: 1.25rem;
  padding-top: 1.25rem;
  border-top: 1px solid var(--rv-card-border);
  font-size: 0.875rem;
  color: var(--rv-muted);
  {% unless section.settings.show_helpful %}display: none;{% endunless %}
}

.review-card__helpful-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.375rem 0.75rem;
  background: transparent;
  border: 1px solid var(--rv-card-border);
  border-radius: 9999px;
  color: var(--rv-muted);
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.review-card__helpful-btn:hover {
  border-color: var(--rv-primary);
  color: var(--rv-primary);
}

/* ==========================================================================
   POLAROID GALLERY
   ========================================================================== */
.reviews-showcase__polaroids {
  margin-top: 4rem;
  {% unless section.settings.show_polaroids %}display: none;{% endunless %}
}

.reviews-showcase__polaroids-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 2rem;
}

@media (min-width: 768px) {
  .reviews-showcase__polaroids-container {
    flex-direction: row;
    gap: 3rem;
  }
}

/* Polaroid Card */
.polaroid {
  position: relative;
  cursor: pointer;
  transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1), z-index 0s 0.4s;
}

.polaroid:hover {
  transform: rotate(0deg) scale(var(--polaroid-hover-scale)) translateY(var(--polaroid-hover-lift));
  z-index: 10;
  transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1), z-index 0s;
}

.polaroid:nth-child(1) { transform: rotate({{ section.settings.polaroid_1_rotation }}deg); }
.polaroid:nth-child(2) { transform: rotate({{ section.settings.polaroid_2_rotation }}deg); }

.polaroid__frame {
  background: var(--polaroid-bg);
  padding: var(--polaroid-padding);
  padding-bottom: var(--polaroid-padding-bottom);
  border-radius: var(--polaroid-radius);
  box-shadow: var(--polaroid-shadow);
  transition: box-shadow 0.3s ease;
}

.polaroid:hover .polaroid__frame {
  box-shadow: var(--polaroid-shadow-hover);
}

.polaroid__image-wrapper {
  position: relative;
  overflow: hidden;
  border-radius: calc(var(--polaroid-radius) / 2);
}

.polaroid__image {
  width: var(--polaroid-width);
  height: var(--polaroid-height);
  object-fit: cover;
  transition: transform 0.5s ease;
}

.polaroid:hover .polaroid__image {
  transform: scale(1.05);
}

.polaroid__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.3), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.polaroid:hover .polaroid__overlay {
  opacity: 1;
}

.polaroid__caption {
  position: absolute;
  bottom: 0.75rem;
  left: 0;
