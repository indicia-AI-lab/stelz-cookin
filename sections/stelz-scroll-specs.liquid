{% comment %}
  STËLZ Scroll Specs Section
  - Rotating can top on scroll
  - Falling ice cubes with scroll-based animation
  - Corner text elements that fly in
  - Fully customizable via Theme Editor
{% endcomment %}

{% style %}
  #scroll-specs-{{ section.id }} {
    --bg-start: {{ section.settings.bg_color_start }};
    --bg-mid1: {{ section.settings.bg_color_mid1 }};
    --bg-mid2: {{ section.settings.bg_color_mid2 }};
    --bg-mid3: {{ section.settings.bg_color_mid3 }};
    --bg-end: {{ section.settings.bg_color_end }};
    --text-color: {{ section.settings.text_color }};
    --section-height: {{ section.settings.section_height }}vh;
    
    position: relative;
    min-height: var(--section-height);
    background: linear-gradient(
      180deg,
      var(--bg-start) 0%,
      var(--bg-start) {{ section.settings.gradient_stop_1 }}%,
      var(--bg-mid1) {{ section.settings.gradient_stop_2 }}%,
      var(--bg-mid2) {{ section.settings.gradient_stop_3 }}%,
      var(--bg-mid3) {{ section.settings.gradient_stop_4 }}%,
      var(--bg-end) 100%
    );
  }

  #scroll-specs-{{ section.id }} .sticky-container {
    position: sticky;
    top: 0;
    height: 100vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Background text */
  #scroll-specs-{{ section.id }} .background-text {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
  }

  #scroll-specs-{{ section.id }} .background-text h2 {
    font-size: {{ section.settings.bg_text_size_mobile }}vw;
    font-weight: {{ section.settings.bg_text_weight }};
    color: {{ section.settings.bg_text_color }};
    opacity: {{ section.settings.bg_text_opacity | divided_by: 100.0 }};
    letter-spacing: -0.05em;
    white-space: nowrap;
    text-transform: uppercase;
  }

  @media (min-width: 768px) {
    #scroll-specs-{{ section.id }} .background-text h2 {
      font-size: {{ section.settings.bg_text_size_desktop }}vw;
    }
  }

  /* Can top */
  #scroll-specs-{{ section.id }} .can-top {
    position: relative;
    width: {{ section.settings.can_size_mobile }}px;
    height: {{ section.settings.can_size_mobile }}px;
    z-index: 20;
    transition: transform 0.1s ease-out;
  }

  @media (min-width: 768px) {
    #scroll-specs-{{ section.id }} .can-top {
      width: {{ section.settings.can_size_tablet }}px;
      height: {{ section.settings.can_size_tablet }}px;
    }
  }

  @media (min-width: 1024px) {
    #scroll-specs-{{ section.id }} .can-top {
      width: {{ section.settings.can_size_desktop }}px;
      height: {{ section.settings.can_size_desktop }}px;
    }
  }

  #scroll-specs-{{ section.id }} .can-top img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Ice cubes */
  #scroll-specs-{{ section.id }} .ice-cube {
    position: absolute;
    pointer-events: none;
    top: 0;
    transition: opacity 0.3s ease;
  }

  #scroll-specs-{{ section.id }} .ice-cube.in-front {
    z-index: 30;
  }

  #scroll-specs-{{ section.id }} .ice-cube.behind {
    z-index: 5;
  }

  #scroll-specs-{{ section.id }} .ice-cube img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Spec text blocks */
  #scroll-specs-{{ section.id }} .spec-text {
    position: absolute;
    z-index: 10;
    color: var(--text-color);
    transition: all 0.7s cubic-bezier(0.16, 1, 0.3, 1);
    opacity: 0;
  }

  #scroll-specs-{{ section.id }} .spec-text.visible {
    opacity: 1;
    transform: translate(0, 0) !important;
  }

  #scroll-specs-{{ section.id }} .spec-text.top-left {
    top: {{ section.settings.text_top_position }}%;
    left: {{ section.settings.text_left_position }}%;
    transform: translate(-50px, -30px);
  }

  #scroll-specs-{{ section.id }} .spec-text.top-right {
    top: {{ section.settings.text_top_position | minus: 2 }}%;
    right: {{ section.settings.text_right_position }}%;
    text-align: right;
    transform: translate(50px, -30px);
    transition-delay: 0.15s;
  }

  #scroll-specs-{{ section.id }} .spec-text.bottom-left {
    bottom: {{ section.settings.text_bottom_position }}%;
    left: {{ section.settings.text_left_position | plus: 2 }}%;
    transform: translate(-50px, 30px);
    transition-delay: 0.3s;
  }

  #scroll-specs-{{ section.id }} .spec-text.bottom-right {
    bottom: {{ section.settings.text_bottom_position | minus: 2 }}%;
    right: {{ section.settings.text_right_position }}%;
    text-align: right;
    transform: translate(50px, 30px);
    transition-delay: 0.45s;
  }

  #scroll-specs-{{ section.id }} .spec-text .main-text {
    font-size: {{ section.settings.main_text_size_mobile }}rem;
    line-height: 1;
    letter-spacing: -0.02em;
    margin: 0;
  }

  #scroll-specs-{{ section.id }} .spec-text .sub-text {
    font-size: {{ section.settings.sub_text_size_mobile }}rem;
    letter-spacing: 0.15em;
    opacity: 0.7;
    margin: 0;
    margin-top: 0.1rem;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    #scroll-specs-{{ section.id }} .spec-text .main-text {
      font-size: {{ section.settings.main_text_size_tablet }}rem;
    }
    #scroll-specs-{{ section.id }} .spec-text .sub-text {
      font-size: {{ section.settings.sub_text_size_tablet }}rem;
    }
    #scroll-specs-{{ section.id }} .spec-text.top-left {
      left: {{ section.settings.text_left_position_desktop }}%;
    }
    #scroll-specs-{{ section.id }} .spec-text.top-right {
      right: {{ section.settings.text_right_position_desktop }}%;
    }
    #scroll-specs-{{ section.id }} .spec-text.bottom-left {
      left: {{ section.settings.text_left_position_desktop | plus: 3 }}%;
    }
    #scroll-specs-{{ section.id }} .spec-text.bottom-right {
      right: {{ section.settings.text_right_position_desktop }}%;
    }
  }

  @media (min-width: 1024px) {
    #scroll-specs-{{ section.id }} .spec-text .main-text {
      font-size: {{ section.settings.main_text_size_desktop }}rem;
    }
    #scroll-specs-{{ section.id }} .spec-text .sub-text {
      font-size: {{ section.settings.sub_text_size_desktop }}rem;
    }
  }
{% endstyle %}

<section id="scroll-specs-{{ section.id }}" class="scroll-specs-section">
  <div class="sticky-container">
    
    {% comment %} Background text {% endcomment %}
    {% if section.settings.show_background_text %}
      <div class="background-text">
        <h2>{{ section.settings.background_text }}</h2>
      </div>
    {% endif %}

    {% comment %} Ice cubes container {% endcomment %}
    <div class="ice-cubes-container" 
         data-count="{{ section.settings.ice_cube_count }}"
         data-min-size="{{ section.settings.ice_cube_min_size }}"
         data-max-size="{{ section.settings.ice_cube_max_size }}"
         data-start-offset-min="{{ section.settings.ice_start_offset_min }}"
         data-start-offset-max="{{ section.settings.ice_start_offset_max }}"
         data-fall-speed-min="{{ section.settings.ice_fall_speed_min }}"
         data-fall-speed-max="{{ section.settings.ice_fall_speed_max }}"
         data-front-chance="{{ section.settings.ice_front_chance }}">
      {% if section.settings.ice_cube_image != blank %}
        <template id="ice-cube-template-{{ section.id }}">
          <div class="ice-cube">
            <img src="{{ section.settings.ice_cube_image | image_url: width: 300 }}" 
                 alt="Ice cube"
                 loading="lazy">
          </div>
        </template>
      {% endif %}
    </div>

    {% comment %} Can top {% endcomment %}
    {% if section.settings.can_top_image != blank %}
      <div class="can-top" data-rotation-multiplier="{{ section.settings.can_rotation_multiplier }}">
        <img src="{{ section.settings.can_top_image | image_url: width: 800 }}" 
             alt="{{ section.settings.can_alt_text }}"
             loading="lazy">
      </div>
    {% endif %}

    {% comment %} Spec text blocks {% endcomment %}
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'spec_top_left' %}
          <div class="spec-text top-left" {{ block.shopify_attributes }}>
            <p class="main-text" style="font-weight: {{ block.settings.main_text_weight }};">
              {{ block.settings.main_text }}
            </p>
            <p class="sub-text" style="font-weight: {{ block.settings.sub_text_weight }};">
              {{ block.settings.sub_text }}
            </p>
          </div>

        {% when 'spec_top_right' %}
          <div class="spec-text top-right" {{ block.shopify_attributes }}>
            <p class="main-text" style="font-weight: {{ block.settings.main_text_weight }};">
              {{ block.settings.main_text }}
            </p>
            <p class="sub-text" style="font-weight: {{ block.settings.sub_text_weight }};">
              {{ block.settings.sub_text }}
            </p>
          </div>

        {% when 'spec_bottom_left' %}
          <div class="spec-text bottom-left" {{ block.shopify_attributes }}>
            <p class="main-text" style="font-weight: {{ block.settings.main_text_weight }};">
              {{ block.settings.main_text }}
            </p>
            <p class="sub-text" style="font-weight: {{ block.settings.sub_text_weight }};">
              {{ block.settings.sub_text }}
            </p>
          </div>

        {% when 'spec_bottom_right' %}
          <div class="spec-text bottom-right" {{ block.shopify_attributes }}>
            <p class="main-text" style="font-weight: {{ block.settings.main_text_weight }};">
              {{ block.settings.main_text }}
            </p>
            <p class="sub-text" style="font-weight: {{ block.settings.sub_text_weight }};">
              {{ block.settings.sub_text }}
            </p>
          </div>
      {% endcase %}
    {% endfor %}

  </div>
</section>

<script>
  (function() {
    const section = document.getElementById('scroll-specs-{{ section.id }}');
    if (!section) return;

    const stickyContainer = section.querySelector('.sticky-container');
    const canTop = section.querySelector('.can-top');
    const iceCubesContainer = section.querySelector('.ice-cubes-container');
    const specTexts = section.querySelectorAll('.spec-text');
    const template = document.getElementById('ice-cube-template-{{ section.id }}');

    // Ice cube settings from data attributes (convert percentages to decimals)
    const iceSettings = {
      count: parseInt(iceCubesContainer?.dataset.count || 15),
      minSize: parseInt(iceCubesContainer?.dataset.minSize || 60),
      maxSize: parseInt(iceCubesContainer?.dataset.maxSize || 240),
      startOffsetMin: parseFloat(iceCubesContainer?.dataset.startOffsetMin || 10) / 100,
      startOffsetMax: parseFloat(iceCubesContainer?.dataset.startOffsetMax || 40) / 100,
      fallSpeedMin: parseFloat(iceCubesContainer?.dataset.fallSpeedMin || 120) / 100,
      fallSpeedMax: parseFloat(iceCubesContainer?.dataset.fallSpeedMax || 180) / 100,
      frontChance: parseFloat(iceCubesContainer?.dataset.frontChance || 40) / 100
    };

    // Generate ice cubes
    const iceCubes = [];
    if (template && iceCubesContainer) {
      for (let i = 0; i < iceSettings.count; i++) {
        const clone = template.content.cloneNode(true);
        const cubeEl = clone.querySelector('.ice-cube');
        
        const cube = {
          element: cubeEl,
          left: (i / iceSettings.count) * 90 + 5 + (Math.random() - 0.5) * 10,
          startOffset: iceSettings.startOffsetMin + Math.random() * (iceSettings.startOffsetMax - iceSettings.startOffsetMin),
          fallSpeed: iceSettings.fallSpeedMin + Math.random() * (iceSettings.fallSpeedMax - iceSettings.fallSpeedMin),
          size: iceSettings.minSize + Math.random() * (iceSettings.maxSize - iceSettings.minSize),
          rotation: Math.random() * 360,
          rotationSpeed: 120 + Math.random() * 240,
          inFront: Math.random() < iceSettings.frontChance
        };

        cubeEl.style.left = cube.left + '%';
        cubeEl.style.width = cube.size + 'px';
        cubeEl.style.height = cube.size + 'px';
        cubeEl.classList.add(cube.inFront ? 'in-front' : 'behind');

        iceCubesContainer.appendChild(cubeEl);
        cube.element = iceCubesContainer.lastElementChild;
        iceCubes.push(cube);
      }
    }

    // Can rotation settings
    const rotationMultiplier = parseFloat(canTop?.dataset.rotationMultiplier || 720);

    let scrollProgress = 0;

    function handleScroll() {
      const rect = section.getBoundingClientRect();
      const sectionHeight = section.offsetHeight;
      const windowHeight = window.innerHeight;

      const startPoint = rect.top;
      const endPoint = rect.bottom - windowHeight;
      const totalScroll = sectionHeight - windowHeight;

      if (startPoint <= 0 && endPoint >= 0) {
        scrollProgress = Math.min(Math.max(Math.abs(startPoint) / totalScroll, 0), 1);

        // Rotate can
        if (canTop) {
          const rotation = scrollProgress * rotationMultiplier;
          canTop.style.transform = `rotate(${rotation}deg)`;
        }

        // Animate ice cubes
        iceCubes.forEach(cube => {
          const cubeProgress = Math.max(0, (scrollProgress - cube.startOffset) * cube.fallSpeed / (1 - cube.startOffset));
          const clampedProgress = Math.min(cubeProgress, 1);
          const yPosition = -60 + (clampedProgress * (windowHeight + 120));
          const currentRotation = cube.rotation + (clampedProgress * cube.rotationSpeed);
          const opacity = cubeProgress > 0 && cubeProgress < 1 ? 1 : 0;

          cube.element.style.transform = `translateY(${yPosition}px)`;
          cube.element.querySelector('img').style.transform = `rotate(${currentRotation}deg)`;
          cube.element.style.opacity = opacity;
        });

        // Show spec texts based on progress
        specTexts.forEach((text, index) => {
          const threshold = (index * 0.15) + 0.1;
          if (scrollProgress > threshold) {
            text.classList.add('visible');
          } else {
            text.classList.remove('visible');
          }
        });
      }
    }

    window.addEventListener('scroll', handleScroll, { passive: true });
    handleScroll();

    // Cleanup on section unload
    document.addEventListener('shopify:section:unload', function(event) {
      if (event.detail.sectionId === '{{ section.id }}') {
        window.removeEventListener('scroll', handleScroll);
      }
    });
  })();
</script>

