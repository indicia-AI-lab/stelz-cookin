{% comment %}
  Full Width Image Block
  Simpele full-width afbeelding sectie
{% endcomment %}

<style>
  .fwi {
    width: 100%;
    position: relative;
    overflow: hidden;
    background: {{ section.settings.bg_color }};
  }

  .fwi__img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: {{ section.settings.object_fit }};
  }

  {% if section.settings.fixed_height %}
  .fwi__img {
    height: {{ section.settings.height_mobile }}px;
    object-fit: cover;
  }

  @media (min-width: 750px) {
    .fwi__img {
      height: {{ section.settings.height_desktop }}px;
    }
  }
  {% endif %}

  {% if section.settings.max_width != 'full' %}
  .fwi {
    max-width: {{ section.settings.max_width }};
    margin-left: auto;
    margin-right: auto;
  }
  {% endif %}

  {% if section.settings.border_radius > 0 %}
  .fwi {
    border-radius: {{ section.settings.border_radius }}px;
    margin: 0 {{ section.settings.side_padding }}px;
    width: calc(100% - {{ section.settings.side_padding | times: 2 }}px);
  }
  {% endif %}
</style>

<section class="fwi">
  {% if section.settings.link != blank %}
    <a href="{{ section.settings.link }}">
  {% endif %}

  {% if section.settings.image_mobile != blank or section.settings.image_desktop != blank %}
    <picture>
      {% if section.settings.image_mobile != blank %}
        <source 
          media="(max-width: 749px)" 
          srcset="{{ section.settings.image_mobile | image_url: width: 800 }} 800w,
                  {{ section.settings.image_mobile | image_url: width: 1200 }} 1200w"
          sizes="100vw"
        >
      {% endif %}
      <img 
        src="{{ section.settings.image_desktop | default: section.settings.image_mobile | image_url: width: 1920 }}"
        srcset="{{ section.settings.image_desktop | default: section.settings.image_mobile | image_url: width: 800 }} 800w,
                {{ section.settings.image_desktop | default: section.settings.image_mobile | image_url: width: 1200 }} 1200w,
                {{ section.settings.image_desktop | default: section.settings.image_mobile | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.alt_text | escape }}"
        class="fwi__img"
        loading="{{ section.settings.lazy_load | default: 'lazy' }}"
        {% if section.settings.image_desktop != blank %}
          width="{{ section.settings.image_desktop.width }}"
          height="{{ section.settings.image_desktop.height }}"
        {% elsif section.settings.image_mobile != blank %}
          width="{{ section.settings.image_mobile.width }}"
          height="{{ section.settings.image_mobile.height }}"
        {% endif %}
      >
    </picture>
  {% else %}
    {{ 'lifestyle-1' | placeholder_svg_tag: 'fwi__img' }}
  {% endif %}

  {% if section.settings.link != blank %}
    </a>
  {% endif %}
</section>

{% schema %}
{
  "name": "Full Width Afbeelding",
  "tag": "section",
  "class": "section-full-width-image",
  "settings": [
    {
      "type": "header",
      "content": "Afbeeldingen"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Afbeelding (desktop)"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Afbeelding (mobiel)",
      "info": "Optioneel: andere afbeelding voor mobiel"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Alt tekst",
      "default": "Alt"
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link (optioneel)"
    },
    {
      "type": "header",
      "content": "Afmetingen"
    },
    {
      "type": "checkbox",
      "id": "fixed_height",
      "label": "Vaste hoogte gebruiken",
      "default": false
    },
    {
      "type": "range",
      "id": "height_mobile",
      "label": "Hoogte mobiel",
      "min": 150,
      "max": 800,
      "step": 10,
      "default": 400,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "height_desktop",
      "label": "Hoogte desktop",
      "min": 200,
      "max": 1000,
      "step": 10,
      "default": 600,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "object_fit",
      "label": "Afbeelding schaling",
      "options": [
        { "value": "cover", "label": "Cover (vult volledig)" },
        { "value": "contain", "label": "Contain (past binnen)" },
        { "value": "fill", "label": "Fill (uitrekken)" }
      ],
      "default": "cover"
    },
    {
      "type": "select",
      "id": "max_width",
      "label": "Maximale breedte",
      "options": [
        { "value": "full", "label": "Volledig (100%)" },
        { "value": "1400px", "label": "1400px" },
        { "value": "1200px", "label": "1200px" },
        { "value": "1000px", "label": "1000px" }
      ],
      "default": "full"
    },
    {
      "type": "header",
      "content": "Stijl"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Afgeronde hoeken",
      "min": 0,
      "max": 50,
      "step": 2,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "side_padding",
      "label": "Zijkant padding (bij afronding)",
      "min": 0,
      "max": 40,
      "step": 4,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Achtergrondkleur",
      "default": "transparent"
    },
    {
      "type": "select",
      "id": "lazy_load",
      "label": "Lazy loading",
      "options": [
        { "value": "lazy", "label": "Aan (aanbevolen)" },
        { "value": "eager", "label": "Uit (voor above-the-fold)" }
      ],
      "default": "lazy"
    }
  ],
  "presets": [
    {
      "name": "Full Width Afbeelding"
    }
  ]
}
{% endschema %}