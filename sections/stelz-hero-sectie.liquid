    }
  }
  
  /* Keyframe Animations - Intense Movement */
  @keyframes stelzCanFloat-{{ section.id }} {
    0% {
      transform: scale(1) rotate(-4deg) translateY(0) translateX(0);
    }
    20% {
      transform: scale(1.02) rotate(-1deg) translateY(-25px) translateX(12px);
    }
    40% {
      transform: scale(0.98) rotate(-5deg) translateY(-40px) translateX(-5px);
    }
    60% {
