<script>
  (function() {
    const sectionId = '{{ section.id }}';
    const section = document.getElementById('hero-' + sectionId);
    if (!section) return;
    
    const cans = section.querySelectorAll('.hero-stelz__can');
    const tabs = section.querySelectorAll('.hero-stelz__flavor-tab');
    const tapBtn = section.querySelector('.hero-stelz__tap-btn');
    const flavorName = section.querySelector('.hero-stelz__flavor-name');
    const indicatorBar = section.querySelector('.hero-stelz__flavor-indicator-bar');
    const bg = section.querySelector('.hero-stelz__bg');
    const orbs = section.querySelectorAll('.hero-stelz__orb');
    
    let currentIndex = 0;
    let autoRotateInterval;
    let isHovered = false;
    const totalFlavors = cans.length;
    const autoRotateDelay = {{ section.settings.auto_rotate_speed | default: 3 }} * 1000;
    const autoRotateEnabled = {{ section.settings.auto_rotate | json }};
    
    function hexToRgba(hex, alpha) {
      const r = parseInt(hex.slice(1, 3), 16);
      const g = parseInt(hex.slice(3, 5), 16);
      const b = parseInt(hex.slice(5, 7), 16);
      return 'rgba(' + r + ', ' + g + ', ' + b + ', ' + alpha + ')';
    }
    
    let isAnimating = false;
    
    function setActiveFlavor(index, animate = true) {
      if (totalFlavors === 0 || index === currentIndex) return;
      if (isAnimating && animate) return;
      
      const prevIndex = currentIndex;
      currentIndex = index;
      
      // Update tabs immediately
      tabs.forEach(function(tab, i) {
        if (i === index) {
          tab.classList.add('is-active');
        } else {
          tab.classList.remove('is-active');
        }
      });
      
      // Update flavor name
      var activeCan = cans[index];
      if (flavorName && activeCan) {
        flavorName.textContent = activeCan.dataset.flavorName || '';
      }
      
      // Update indicator bar position
      if (indicatorBar && totalFlavors > 0) {
        var width = 100 / totalFlavors;
        indicatorBar.style.width = width + '%';
        indicatorBar.style.left = (width * index) + '%';
      }
      
      // Update background gradient and section background color
      var activeCan = cans[index];
      if (activeCan) {
        // Update section background color
        var sectionBgColor = activeCan.dataset.sectionBgColor;
        if (sectionBgColor) {
          section.style.backgroundColor = sectionBgColor;
        }
        
        // Update gradient overlay
        if (bg) {
          var gradientColor = activeCan.dataset.gradientColor || activeCan.dataset.flavorColor;
          if (gradientColor) {
            bg.style.background = 'linear-gradient(180deg, ' + gradientColor + ' 0%, ' + (sectionBgColor || 'var(--hero-bg-fallback)') + ' 100%)';
          }
        }
      }
      
      // Animate cans with slide effect
      if (animate && prevIndex !== index) {
        isAnimating = true;
        var prevCan = cans[prevIndex];
        var nextCan = cans[index];
        
        // Slide out previous can
        if (prevCan) {
          prevCan.classList.remove('is-active', 'is-hovered');
          prevCan.classList.add('is-sliding-out');
        }
        
        // Slide in new can after short delay
        setTimeout(function() {
          if (nextCan) {
            nextCan.classList.add('is-active', 'is-sliding-in');
            
            // Update drop shadow (neutral)
            var canImg = nextCan.querySelector('.hero-stelz__can-image');
            if (canImg) {
              canImg.style.filter = 'drop-shadow(0 30px 60px rgba(0, 0, 0, 0.25))';
            }
            
            // Reflection hidden via CSS
          }
        }, 150);
        
        // Clean up animation classes
        setTimeout(function() {
          if (prevCan) {
            prevCan.classList.remove('is-sliding-out');
          }
          if (nextCan) {
            nextCan.classList.remove('is-sliding-in');
          }
          isAnimating = false;
        }, 650);
      } else {
        // No animation - just swap
        cans.forEach(function(can, i) {
          if (i === index) {
            can.classList.add('is-active');
            var canImg = can.querySelector('.hero-stelz__can-image');
            if (canImg) {
              canImg.style.filter = 'drop-shadow(0 30px 60px rgba(0, 0, 0, 0.25))';
            }
            // Reflection hidden via CSS
          } else {
            can.classList.remove('is-active');
          }
        });
      }
    }
    
    function nextFlavor() {
      setActiveFlavor((currentIndex + 1) % totalFlavors);
    }
    
    function startAutoRotate() {
      if (!autoRotateEnabled || totalFlavors <= 1) return;
      autoRotateInterval = setInterval(function() {
        if (!isHovered) nextFlavor();
      }, autoRotateDelay);
    }
    
    function stopAutoRotate() {
      if (autoRotateInterval) {
        clearInterval(autoRotateInterval);
      }
    }
    
    // Event listeners for tabs
    tabs.forEach(function(tab, index) {
      tab.addEventListener('click', function() {
        setActiveFlavor(index);
      });
    });
    
    // TAP button click - always go to next flavor
    if (tapBtn) {
      tapBtn.addEventListener('click', function() {
        nextFlavor();
      });
    }
    
    // Can IMAGE click only - go to product if linked
    cans.forEach(function(can) {
      var canImage = can.querySelector('.hero-stelz__can-image');
      if (canImage) {
        canImage.addEventListener('click', function(e) {
          e.stopPropagation();
          var productUrl = can.dataset.productUrl;
          if (productUrl && can.classList.contains('is-active')) {
            window.location.href = productUrl;
          }
        });
      }
    });
    
    // Hover detection on entire section (zoom effect on can)
    function setCanHovered(hovered) {
      isHovered = hovered;
      cans.forEach(function(can) {
        if (hovered) {
          can.classList.add('is-hovered');
        } else {
          can.classList.remove('is-hovered');
        }
      });
    }
    
    // Section hover - activates zoom
    section.addEventListener('mouseenter', function() {
      setCanHovered(true);
    });
    
    section.addEventListener('mouseleave', function() {
      setCanHovered(false);
    });
    
    // TAP button hover - deactivates zoom (takes priority)
    if (tapBtn) {
      tapBtn.addEventListener('mouseenter', function(e) {
        e.stopPropagation();
        setCanHovered(false);
      });
      tapBtn.addEventListener('mouseleave', function(e) {
        e.stopPropagation();
        setCanHovered(true);
      });
    }
    
    // Flavor tabs hover - deactivates zoom
    tabs.forEach(function(tab) {
      tab.addEventListener('mouseenter', function(e) {
        e.stopPropagation();
        setCanHovered(false);
      });
      tab.addEventListener('mouseleave', function(e) {
        e.stopPropagation();
        setCanHovered(true);
      });
    });
    
    // Initialize (no animation on first load)
    setActiveFlavor(0, false);
    startAutoRotate();

    // Buy Button functionality
    var buyBtn = section.querySelector('.hero-stelz__buy-btn');
    if (buyBtn) {
      buyBtn.addEventListener('click', function() {
        var activeCan = cans[currentIndex];
        if (!activeCan) return;

        var productHandle = activeCan.dataset.productUrl;
        if (!productHandle) {
          // No product linked, go to collections
          window.location.href = '/collections/all';
          return;
        }

        var btn = this;
        var originalHTML = btn.innerHTML;

        // Loading state
        btn.classList.add('is-loading');
        btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><circle cx="12" cy="12" r="10"/></svg> <span>Even geduld...</span>';

        // Extract product handle from URL
        var handle = productHandle.split('/products/')[1];
        if (!handle) {
          window.location.href = productHandle;
          return;
        }

        // Fetch product to get first variant ID
        fetch('/products/' + handle + '.js')
          .then(function(response) { return response.json(); })
          .then(function(product) {
            var variantId = product.variants[0].id;
            
            // Add to cart
            return fetch('/cart/add.js', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                id: variantId,
                quantity: 1
              })
            });
          })
          .then(function(response) { return response.json(); })
          .then(function(data) {
            // Success state
btn.classList.remove('is-loading');
          btn.classList.add('is-success');
          btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg> <span>Toegevoegd!</span>';

            // Dispatch cart update event
            document.dispatchEvent(new CustomEvent('cart:updated', { detail: { cart: data } }));

            // Redirect to cart after short delay
            setTimeout(function() {
              window.location.href = '/cart';
            }, 800);
          })
          .catch(function(error) {
            console.error('Error adding to cart:', error);
            btn.classList.remove('is-loading');
            btn.innerHTML = originalHTML;
            // Fallback: go to product page
            window.location.href = productHandle;
          });
      });
    }
    
    // Cleanup on section unload (for Shopify theme editor)
    document.addEventListener('shopify:section:unload', function(e) {
      if (e.detail.sectionId === sectionId) {
        stopAutoRotate();
      }
    });
    
    // Re-initialize on section load (for Shopify theme editor)
    document.addEventListener('shopify:section:load', function(e) {
      if (e.detail.sectionId === sectionId) {
        setActiveFlavor(0, false);
        startAutoRotate();
      }
    });
  })();
</script>

