{% comment %}
  ============================================
  STËLZ Hero Section - Compleet Bestand
  ============================================
  Upload dit bestand naar: Online Store > Themes > Edit code > Sections > Add new section
  Noem het: hero-stelz-complete.liquid
  
  Gebruik: Voeg de sectie toe via Theme Editor en upload je blikjes afbeeldingen.
{% endcomment %}

<style>
  /* ===========================================
     STËLZ Hero Section Styles
     =========================================== */
  
  .hero-stelz-{{ section.id }} {
    --hero-bg-color: {% for block in section.blocks %}{% if block.type == 'flavor' and forloop.first %}{{ block.settings.section_bg_color | default: section.settings.background_color }}{% endif %}{% endfor %};
    --hero-bg-fallback: {{ section.settings.background_color }};
    --hero-text-color: {{ section.settings.text_color }};
    --hero-accent-color: {% for block in section.blocks %}{% if block.type == 'flavor' and forloop.first %}{{ block.settings.flavor_color }}{% endif %}{% endfor %};
    --hero-gradient-color: {% for block in section.blocks %}{% if block.type == 'flavor' and forloop.first %}{{ block.settings.gradient_color | default: block.settings.flavor_color }}{% endif %}{% endfor %};
    
    position: relative;
    min-height: 100vh;
    overflow: hidden;
    background-color: var(--hero-bg-color);
    color: var(--hero-text-color);
    contain: layout style paint;
    transition: background-color 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Background - Gradient per flavor */
  .hero-stelz-{{ section.id }} .hero-stelz__bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, var(--hero-gradient-color) 0%, var(--hero-bg-color) 100%);
    transition: background 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Texture Overlay */
  .hero-stelz-{{ section.id }} .hero-stelz__texture {
    position: absolute;
    inset: 0;
    opacity: 0.15;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    mix-blend-mode: overlay;
    pointer-events: none;
  }
  
  /* Decorative Orbs - Hidden by default, can be enabled */
  .hero-stelz-{{ section.id }} .hero-stelz__orb {
    display: none;
  }
  
  /* Brand Text Background */
  .hero-stelz-{{ section.id }} .hero-stelz__brand-text {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    overflow: hidden;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__brand-text span {
    font-family: var(--font-heading-family);
    font-size: clamp(20rem, 40vw, 50rem);
    color: var(--hero-text-color);
    opacity: 0.03;
    line-height: 1;
    letter-spacing: 0.05em;
    user-select: none;
    white-space: nowrap;
    font-weight: {{ section.settings.brand_text_weight }};
  }
  
  /* Decorations */
  .hero-stelz-{{ section.id }} .hero-stelz__decorations {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__splash {
    position: absolute;
    color: rgba(255, 255, 255, 0.3);
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__splash--1 {
    top: 33%;
    left: 10%;
    width: 4rem;
    height: 4rem;
    animation: stelzWiggle-{{ section.id }} 8s cubic-bezier(0.45, 0.05, 0.55, 0.95) infinite;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__splash--2 {
    top: 25%;
    right: 15%;
    width: 3rem;
    height: 3rem;
    animation: stelzWiggle-{{ section.id }} 7s cubic-bezier(0.45, 0.05, 0.55, 0.95) infinite 1.5s;
    opacity: 0.3;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__splash--3 {
    bottom: 33%;
    left: 20%;
    width: 2rem;
    height: 2rem;
    animation: stelzBubble-{{ section.id }} 6s cubic-bezier(0.45, 0.05, 0.55, 0.95) infinite;
    opacity: 0.2;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__curves {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 400px;
    pointer-events: none;
    opacity: 0.6;
    color: white;
  }
  
  /* Can Container */
  .hero-stelz-{{ section.id }} .hero-stelz__can-container {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__can {
    position: absolute;
    width: 100%;
    max-width: 400px;
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    opacity: 0;
    transform: scale(0.9) rotate(-3deg) translateY(0);
    transition: 
      opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    pointer-events: none;
    cursor: pointer;
    will-change: transform, opacity;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__can.is-active {
    opacity: 1;
    transform: scale(1) rotate(-3deg) translateY(0) translateX(0);
    pointer-events: auto;
    animation: stelzCanFloat-{{ section.id }} 6s cubic-bezier(0.45, 0.05, 0.55, 0.95) infinite;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__can.is-sliding-out {
    animation: stelzSlideOutLeft-{{ section.id }} 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    pointer-events: none;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__can.is-sliding-in {
    animation: stelzSlideInRight-{{ section.id }} 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__can-image {
    max-height: 80%;
    width: auto;
    object-fit: contain;
    transition: 
      filter 0.8s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    will-change: filter, transform;
  }
  
  /* Section hover - subtle zoom */
  .hero-stelz-{{ section.id }} .hero-stelz__can.is-active.is-hovered .hero-stelz__can-image {
    transform: scale(1.08);
  }
  
  /* Direct can hover - nudge effect */
  .hero-stelz-{{ section.id }} .hero-stelz__can.is-active:hover .hero-stelz__can-image {
    transform: scale(1.12) translateY(-8px);
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__can.is-active[data-product-url]:hover {
    cursor: pointer;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__can-placeholder {
    width: 200px;
    height: 400px;
    background: rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(0,0,0,0.3);
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__can-reflection {
    display: none;
  }
  
  /* TAP Button - Fully Customizable */
  .hero-stelz-{{ section.id }} .hero-stelz__tap-btn {
    position: absolute;
    right: {{ section.settings.tap_position_right }}px;
    top: calc(50% - {{ section.settings.button_gap | divided_by: 2 }}px);
    transform: translateY(-50%);
    z-index: 20;
    width: {{ section.settings.tap_size }}px;
    height: {{ section.settings.tap_size }}px;
    border-radius: {{ section.settings.tap_border_radius }}px;
    background-color: {{ section.settings.tap_button_bg }};
    color: {{ section.settings.tap_button_text_color }};
    font-family: var(--font-heading-family);
    font-size: {{ section.settings.tap_font_size }}px;
    font-weight: {{ section.settings.tap_button_weight }};
    letter-spacing: 0.05em;
    border: none;
    cursor: pointer;
    box-shadow: 0 {{ section.settings.tap_shadow_intensity | divided_by: 2 }}px {{ section.settings.tap_shadow_intensity }}px rgba(0, 0, 0, 0.2);
    transition: 
      transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
      box-shadow 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    {% if section.settings.tap_enable_pulse %}
    animation: stelzTapPulse-{{ section.id }} 3s cubic-bezier(0.45, 0.05, 0.55, 0.95) infinite;
    {% endif %}
    will-change: transform, box-shadow;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__tap-btn:hover {
    transform: translateY(-50%) scale(1.12);
    box-shadow: 0 {{ section.settings.tap_shadow_intensity }}px {{ section.settings.tap_shadow_intensity | times: 1.5 }}px rgba(0, 0, 0, 0.35);
    background-color: {{ section.settings.tap_button_hover_bg | default: section.settings.tap_button_bg }};
    animation-play-state: paused;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__tap-btn:active {
    transform: translateY(-50%) scale(1.05);
    transition-duration: 0.15s;
  }
  
  @media (min-width: 768px) {
    .hero-stelz-{{ section.id }} .hero-stelz__tap-btn {
      right: {{ section.settings.tap_position_right_desktop }}px;
      width: {{ section.settings.tap_size_desktop }}px;
      height: {{ section.settings.tap_size_desktop }}px;
      font-size: {{ section.settings.tap_font_size_desktop }}px;
    }
  }

  /* Buy Button - Fully Customizable Glass Morphism */
  {%- assign buy_opacity = section.settings.buy_bg_opacity | default: 85 | divided_by: 100.0 -%}
  {%- assign buy_opacity_lower = buy_opacity | minus: 0.08 -%}
  .hero-stelz-{{ section.id }} .hero-stelz__buy-btn {
    position: absolute;
    right: {{ section.settings.buy_position_right }}px;
    top: calc(50% + {{ section.settings.button_gap | divided_by: 2 }}px + {{ section.settings.tap_size | divided_by: 2 }}px);
    transform: translateY(-50%);
    z-index: 20;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    padding: {{ section.settings.buy_padding_y }}px {{ section.settings.buy_padding_x }}px;
    border-radius: {{ section.settings.buy_border_radius }}px;
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, {{ buy_opacity }}) 0%, 
      rgba(255, 255, 255, {{ buy_opacity_lower }}) 100%);
    color: {{ section.settings.buy_button_text_color | default: '#1a1a1a' }};
    font-family: var(--font-heading-family);
    font-size: {{ section.settings.buy_font_size }}px;
    font-weight: {{ section.settings.buy_font_weight }};
    letter-spacing: 0.08em;
    text-transform: uppercase;
    border: 1px solid rgba(255, 255, 255, 0.4);
    cursor: pointer;
    box-shadow: 
      0 4px 24px -2px rgba(0, 0, 0, {{ section.settings.buy_shadow_intensity | divided_by: 100.0 }}),
      0 8px 40px -4px rgba(0, 0, 0, {{ section.settings.buy_shadow_intensity | divided_by: 200.0 }}),
      inset 0 1px 0 rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    white-space: nowrap;
    overflow: hidden;
    will-change: transform, opacity;
  }

  .hero-stelz-{{ section.id }} .hero-stelz__buy-btn::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(135deg, 
      transparent 0%, 
      rgba(255, 255, 255, 0.4) 50%,
      transparent 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .hero-stelz-{{ section.id }} .hero-stelz__buy-btn:hover {
    transform: translateY(-50%) translateY(-4px) scale(1.02);
    background: linear-gradient(135deg, 
      {{ section.settings.buy_button_hover_bg | default: section.settings.buy_button_bg }} 0%, 
      {{ section.settings.buy_button_hover_bg | default: section.settings.buy_button_bg | color_darken: 10 }} 100%);
    box-shadow: 
      0 8px 32px -4px rgba(0, 0, 0, {{ section.settings.buy_shadow_intensity | times: 1.5 | divided_by: 100.0 }}),
      0 16px 56px -8px rgba(0, 0, 0, {{ section.settings.buy_shadow_intensity | divided_by: 100.0 }}),
      inset 0 1px 0 rgba(255, 255, 255, 0.8);
    border-color: rgba(255, 255, 255, 0.5);
  }

  .hero-stelz-{{ section.id }} .hero-stelz__buy-btn:hover::before {
    opacity: 1;
  }

  .hero-stelz-{{ section.id }} .hero-stelz__buy-btn:active {
    transform: translateY(-50%) scale(0.98);
    transition-duration: 0.1s;
  }

  .hero-stelz-{{ section.id }} .hero-stelz__buy-btn svg {
    width: {{ section.settings.buy_icon_size }}px;
    height: {{ section.settings.buy_icon_size }}px;
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  .hero-stelz-{{ section.id }} .hero-stelz__buy-btn:hover svg {
    transform: scale(1.1);
  }

  .hero-stelz-{{ section.id }} .hero-stelz__buy-btn span {
    position: relative;
    z-index: 1;
  }

  .hero-stelz-{{ section.id }} .hero-stelz__buy-btn.is-loading {
    pointer-events: none;
  }

  .hero-stelz-{{ section.id }} .hero-stelz__buy-btn.is-loading svg {
    animation: stelzSpinBtn-{{ section.id }} 0.8s linear infinite;
  }

  @keyframes stelzSpinBtn-{{ section.id }} {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .hero-stelz-{{ section.id }} .hero-stelz__buy-btn.is-success {
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    color: #ffffff;
    border-color: rgba(34, 197, 94, 0.3);
    box-shadow: 
      0 4px 24px -2px rgba(34, 197, 94, 0.3),
      0 8px 40px -4px rgba(34, 197, 94, 0.2);
  }

  @media (min-width: 768px) {
    .hero-stelz-{{ section.id }} .hero-stelz__buy-btn {
      right: {{ section.settings.buy_position_right_desktop }}px;
      top: calc(50% + {{ section.settings.button_gap_desktop | divided_by: 2 }}px + {{ section.settings.tap_size_desktop | divided_by: 2 }}px);
      padding: {{ section.settings.buy_padding_y_desktop }}px {{ section.settings.buy_padding_x_desktop }}px;
      font-size: {{ section.settings.buy_font_size_desktop }}px;
      gap: 0.75rem;
    }

    .hero-stelz-{{ section.id }} .hero-stelz__buy-btn svg {
      width: {{ section.settings.buy_icon_size_desktop }}px;
      height: {{ section.settings.buy_icon_size_desktop }}px;
    }
  }

  @media (max-width: 767px) {
    .hero-stelz-{{ section.id }} .hero-stelz__buy-btn {
      right: auto;
      left: 50%;
      top: auto;
      bottom: {{ section.settings.buy_mobile_bottom }}px;
      transform: translateX(-50%);
    }
    
    .hero-stelz-{{ section.id }} .hero-stelz__buy-btn:hover {
      transform: translateX(-50%) translateY(-4px) scale(1.02);
    }

    .hero-stelz-{{ section.id }} .hero-stelz__buy-btn:active {
      transform: translateX(-50%) scale(0.98);
    }
  }
  
  /* Flavor Switcher */
  .hero-stelz-{{ section.id }} .hero-stelz__flavor-switcher {
    position: absolute;
    bottom: 2rem;
    left: 2rem;
    z-index: 20;
  }
  
  @media (min-width: 768px) {
    .hero-stelz-{{ section.id }} .hero-stelz__flavor-switcher {
      left: 4rem;
    }
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__flavor-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__flavor-prefix {
    font-family: var(--font-heading-family);
    font-size: 1.125rem;
    font-weight: {{ section.settings.flavor_prefix_weight }};
    opacity: 0.6;
    letter-spacing: normal;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__flavor-name {
    font-family: var(--font-heading-family);
    font-size: 1.25rem;
    font-weight: {{ section.settings.flavor_name_weight }};
    transition: opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__flavor-tabs {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__flavor-tab {
    padding: 0.25rem 0.75rem;
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    font-weight: {{ section.settings.flavor_tab_weight }};
    background: none;
    border: none;
    cursor: pointer;
    color: var(--hero-text-color);
    opacity: 0.4;
    transition: 
      opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__flavor-tab:hover {
    opacity: 0.7;
    transform: translateY(-1px);
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__flavor-tab.is-active {
    opacity: 1;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__flavor-indicator {
    position: relative;
    height: 2px;
    background-color: var(--hero-text-color);
    opacity: 0.1;
    margin-top: 0.5rem;
    overflow: hidden;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__flavor-indicator-bar {
    position: absolute;
    height: 100%;
    background-color: var(--hero-text-color);
    transition: 
      left 0.5s cubic-bezier(0.34, 1.56, 0.64, 1),
      width 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  /* Age Badge */
  .hero-stelz-{{ section.id }} .hero-stelz__age-badge {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    z-index: 20;
    font-family: var(--font-heading-family);
    font-size: 1.25rem;
    font-weight: {{ section.settings.age_badge_weight }};
    letter-spacing: 0.1em;
    opacity: 0.6;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__age-badge-image {
    height: {{ section.settings.age_badge_size }}px;
    width: auto;
    opacity: 0.8;
  }
  
  @media (min-width: 768px) {
    .hero-stelz-{{ section.id }} .hero-stelz__age-badge {
      right: 4rem;
      font-size: 1.5rem;
    }
  }
  
  /* Scroll Indicator */
  .hero-stelz-{{ section.id }} .hero-stelz__scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__scroll-mouse {
    width: 1.5rem;
    height: 2.5rem;
    border: 2px solid var(--hero-text-color);
    opacity: 0.2;
    border-radius: 9999px;
    display: flex;
    justify-content: center;
    padding-top: 0.5rem;
  }
  
  .hero-stelz-{{ section.id }} .hero-stelz__scroll-dot {
    width: 0.375rem;
    height: 0.75rem;
    background-color: var(--hero-text-color);
    opacity: 0.4;
    border-radius: 9999px;
    animation: stelzScrollBounce-{{ section.id }} 1.5s ease-in-out infinite;
  }
  
  /* Mobile Adjustments */
  @media (max-width: 767px) {
    .hero-stelz-{{ section.id }} .hero-stelz__can {
      height: 320px;
      max-width: 240px;
    }
    
    .hero-stelz-{{ section.id }} .hero-stelz__brand-text span {
      font-size: 35vw;
    }
    
    .hero-stelz-{{ section.id }} .hero-stelz__curves {
      width: 100%;
      height: 150px;
    }
    
    .hero-stelz-{{ section.id }} .hero-stelz__orb--1 {
      width: 8rem;
      height: 8rem;
    }
    
    .hero-stelz-{{ section.id }} .hero-stelz__orb--2 {
      width: 10rem;
      height: 10rem;
    }
    
    /* TAP button - smaller and repositioned to bottom right */
    .hero-stelz-{{ section.id }} .hero-stelz__tap-btn {
      width: 3.5rem;
      height: 3.5rem;
      font-size: 0.75rem;
      right: 1rem;
      top: auto;
      bottom: 1.5rem;
      transform: none;
    }
    
    .hero-stelz-{{ section.id }} .hero-stelz__tap-btn:hover {
      transform: scale(1.08);
    }
    
    /* Flavor switcher - clean mobile layout */
    .hero-stelz-{{ section.id }} .hero-stelz__flavor-switcher {
      left: 1rem;
      right: 5rem;
      bottom: 1.5rem;
    }
    
    .hero-stelz-{{ section.id }} .hero-stelz__flavor-label {
      margin-bottom: 0.5rem;
    }
    
    .hero-stelz-{{ section.id }} .hero-stelz__flavor-prefix {
      font-size: 0.625rem;
      text-transform: uppercase;
    }
    
    .hero-stelz-{{ section.id }} .hero-stelz__flavor-name {
      font-size: 0.875rem;
    }
    
    /* Flavor tabs - convert to dots on mobile */
    .hero-stelz-{{ section.id }} .hero-stelz__flavor-tabs {
      gap: 0.5rem;
    }
    
    .hero-stelz-{{ section.id }} .hero-stelz__flavor-tab {
      width: 0.5rem;
      height: 0.5rem;
      font-size: 0;
      text-indent: -9999px;
      border-radius: 50%;
      background-color: var(--hero-text-color);
      opacity: 0.3;
      padding: 0;
    }
    
    .hero-stelz-{{ section.id }} .hero-stelz__flavor-tab.is-active {
      opacity: 1;
      transform: scale(1.2);
    }
    
    /* Hide indicator bar on mobile - using dots instead */
    .hero-stelz-{{ section.id }} .hero-stelz__flavor-indicator {
      display: none;
    }
    
